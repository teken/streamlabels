    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug - Newest Follower",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": ["--newest-follower"],
            "env": {},
            "showLog": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Debug - Newest Subscriber",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": ["--newest-subscriber"],
            "env": {},
            "showLog": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Debug - Bits Leaderboard",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": ["--bits-leaderboard"],
            "env": {},
            "showLog": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Debug - All Subscriptions",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": ["--newest-follower", "--newest-subscriber", "--bits-leaderboard"],
            "env": {},
            "showLog": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Debug - Custom Refresh Interval",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": ["--newest-follower", "--refresh-interval", "5s"],
            "env": {},
            "showLog": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Debug - Show Help",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": ["--help"],
            "env": {},
            "showLog": true,
            "console": "integratedTerminal"
        }
    ]
}